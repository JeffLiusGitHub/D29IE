
@{
    ViewBag.Title = "Education";
    ViewBag.BodyStyle = "body-no-banner";

}

<div id="portfolio" class="section lb">
    <div class="container">
        <div class="section-title text-center">
            <h3>Education</h3>
            <p>Something you need to know before your riding.</p>
        </div><!-- end title -->

        <div class="gallery-menu row">
            <div class="col-md-12">
                <div class="button-group filter-button-group text-center">
                    <button class="active" data-filter="*">All</button>
                    <button data-filter=".gal_a">Road Rules</button>
                    <button data-filter=".gal_b">Bicycle Equipments</button>
                    <button data-filter=".gal_c">Traffic Signs</button>
                </div>
            </div>
        </div>

        <div class="gallery-list row">
            <div class="col-md-4 col-sm-6 gallery-grid gal_a gal_b">
                <a href="@Url.Action("RoadRules", "Home")">
                    <div class="gallery-single fix">
                        <div class="post-box">
                            <div class="post-thumb">
                                <img src="~/Content/images/article_photo/photo_01.jpg" class="img-fluid" alt="post-img" />
                            </div>
                            <div class="post-info">
                                <h4>Essential Road Rules</h4>
                                <ul>
                                    <li>by VicRoads</li>
                                </ul>
                                <p>As a bike rider you have to follow many of the same rules as Motorists. This section covers what they are so you can ride responsibly and safely.</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 col-sm-6 gallery-grid gal_a gal_b">
                <a href="streetView/index">
                    <div class="gallery-single fix">
                        <div class="post-box">
