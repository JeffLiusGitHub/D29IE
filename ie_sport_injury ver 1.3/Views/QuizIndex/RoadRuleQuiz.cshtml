                                <div class="question-image text-center">
                                    <img src="~/Content/images/trivia/q03.jpg" class="img-fluid" alt="post-img" />
                                </div>
                            </div><!-- col end -->
                        </div><!-- row end -->

                    </div>
                    <!-- answer -->
                    <div class="container">
                        <h3 class="mb-3" id='q3checkC' style='display:none;font-size:18px;'>Yes, you are correct!</h3>
                        <h3 class="mb-3" id='q3checkN' style='display:none;font-size:18px;'>Sorry, your are wrong.</h3>
                        <p id='q3explain' style='display:none; text-align: justify;font-size:16px;'>

