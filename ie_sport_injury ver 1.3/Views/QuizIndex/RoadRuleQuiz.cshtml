            <div id="questions">
                <!-- question 0 road rule -->
                <div id="q0" class='ftco-section bg-light'>
                    <!-- question section -->
                    <div class="container">

                        <div class="row">
                            <div class="col-md-7">
                                <div class="container-fluid">
                                    <div class="question">
                                        <h2 class="mb-4">
                                            <span class="question-num"></span>. Do vehicles always have to give way to pedestrians at the roundabouts?
                                        </h2>
                                    </div>
                                    <div class='choices'>
                                        <div class="row">
                                            <div class="col-md-6 choice-box">
                                                <label class="choice" style='text-align: justify;'>
                                                    <b>A:</b>Yes
                                                    <input type="radio" name="q0" value='f'>
                                                    <span class="checkmark"></span>
                                                </label>
                                            </div>
                                            <div class="col-md-6 choice-box">
                                                <label class="choice" style='text-align: justify;'>
                                                    <b>B:</b>No
                                                    <input type="radio" name="q0" value="t">
                                                    <span class="checkmark"></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="question-image text-center">
                                    <img src="~/Content/images/trivia/q00.jpg" class="img-fluid" alt="post-img" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- answer -->
                    <div class="container">
                        <h3 class="mb-3" id='q0checkC' style='display:none;font-size:18px;'>You are correct!</h3>
                        <h3 class="mb-3" id='q0checkN' style='display:none;font-size:18px;'>
                            You were almost there, but the right answer is No.
                        </h3>
                        <p id='q0explain' style='display:none; text-align: justify;font-size:16px;'>

                            Before entering a roundabout, you must give way to any:<br>

                            vehicle already in the roundabout
                            tram entering or approaching the roundabout.
                            Vehicles do not need to give way to pedestrians at roundabouts unless there is a pedestrian crossing there.
                        </p>
                    </div>
                    <!-- visualization -->
                    <div class="container visualization text-right" style='margin:20px auto; display:none;'
                         id='q0visualization'>
                        <!-- no visualization in this question -->
                        <a href="#trivia" onclick="next()" class='next w3-right btn btn-info' style="font-size: 20px;">
                            Next Question
                            &raquo;
                        </a>
                    </div>
                </div>

